#!/usr/bin/env ruby

# this first line is how the operating system knows to use ruby to execute this file
# use chmod oug+x txt2csv to make sure the file is executable

require 'thor'

require_relative '../lib/analyze.rb'
require_relative '../lib/parse.rb'

class Txt2csv < Thor
  class_option :i, :banner => "INPUT"
  class_option :o, :banner => "OUTPUT"

  desc "analyze {-p | -s} -i File -o File", "analyze a file"
  option :name_prefix, :aliases => :p,
               :type => 'boolean',
               :banner => " Prefix"

  option :name_suffix, :aliases => :s,
               :type => 'boolean',
               :banner => " Suffix"
  def analyze
    input = options[:i]
    output = options[:o]
    pattern = '-p' if options[:p]
    pattern = '-s' if options[:s]
    filyze = Analyze.new(input, output, pattern)
    filyze.analyze
  end

  desc "txt2csv convert -p prefixfile.txt -s suffixfile.txt -i textfile.txt -o namefile.csv"
  def convert
    input = options[:i]
    output = options[:o]
    convert = Parse.new(input, output)
    convert.parse
  end

end

Txt2csv.start